{
  "manifest_version": 2,

  "name": "Genius Translator",
  "version": "1.0",
  "description": "Translate Lyrics on Genius",

  "permissions": [
    "activeTab",
    "https://genius.com/*",
    "storage"
  ],

  "browser_action": {
    "default_icon": "./icon.png",
    "default_title": "Translate Lyrics on Genius",
    "default_popup": "popup/popup.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["background.js"]
  }
}